<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        MaxHeight="600"
        Width="765" MaxWidth="765" MinWidth="765"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Name="Window">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Name="dg" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden" IsReadOnly="True" AutoGenerateColumns="True"/>
        <TextBlock Grid.Row="1" Name="pbUT"/>
        <ProgressBar Grid.Row="2" Name="pb" Height="10"/>
        <Button Grid.Row="3" Name="btn"/>
    </Grid>
</Window>
