<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="640" MinHeight="640"
        Width="1040" MinWidth="1040"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="25"/>
        </Style>
    </Window.Resources>
    <Grid Grid.IsSharedSizeScope="True" IsEnabled="False" Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="26" SharedSizeGroup="Label"/>
                <RowDefinition Height="3"/>
                <RowDefinition SharedSizeGroup="Label"/>
                <RowDefinition Height="3"/>
                <RowDefinition SharedSizeGroup="Label"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3"/>
                <RowDefinition SharedSizeGroup="Label"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" x:Name="lblApp" Content="Choose application"/>
            <ComboBox Grid.Row="2" x:Name="cbApp"/>
            <Label Grid.Row="4" x:Name="lblAppGroupList" Content="Choose application-group by doubleclicking"/>
            <ListBox Grid.Row="6" x:Name="lbAppGroupList"/>
            <Label Grid.Row="8" x:Name="lblGroupsChosen" Content="Chosen application-groups"/>
            <ListBox Grid.Row="10" x:Name="lbGroupsChosen"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition SharedSizeGroup="Label"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3"/>
                <RowDefinition SharedSizeGroup="Label"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="65"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" x:Name="lblUsersAddPermission" Content="Create permission"/>
            <TextBox Grid.Row="2" AcceptsReturn="True" x:Name="txtUsersAddPermission"/>
            <Label Grid.Row="4" x:Name="lblUsersRemovePermission" Content="Remove permission"/>
            <TextBox Grid.Row="6" AcceptsReturn="True" x:Name="txtUsersRemovePermission"/>
            <StackPanel Grid.Row="8">
                <Button x:Name="btnPerform" Margin="0,10,0,5" IsEnabled="False" Content="Perform"/>
                <Button x:Name="btnUndo" Content="Undo"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="5" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition SharedSizeGroup="Label"/>
                <RowDefinition Height="3"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" x:Name="lblLog" Content="Log"/>
            <ListBox Grid.Row="2" x:Name="lbLog"/>
        </Grid>
    </Grid>
</Window>
