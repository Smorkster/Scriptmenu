<Window
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Height="500" MinHeight="500" MaxHeight="500"
		Width="800" MinWidth="800" MaxWidth="800"
		WindowStartupLocation="CenterScreen"
		Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
		x:Name="Window">
	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="Width" Value="200"/>
			<Setter Property="Margin" Value="5"/>
		</Style>
		<Style TargetType="Label">
			<Setter Property="Margin" Value="5,0,5,0"/>
		</Style>
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="100*"/>
			<RowDefinition Height="60"/>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" Grid.Row="0">
			<Label x:Name="lblId"/>
			<TextBox Name="tbID" Width="100" VerticalAlignment="Center"/>
			<Label Name="lblAccountInfo"/>
			<Button Name="btnCancel" Visibility="Visible"/>
		</StackPanel>
		<ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
			<StackPanel Orientation="Vertical" Name="spOutput" Width="790"/>
		</ScrollViewer>
		<StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
			<Button Name="btnExtend"/>
			<Button Name="btnUnlock"/>
			<Button Name="btnActivate"/>
		</StackPanel>
	</Grid>
</Window>
