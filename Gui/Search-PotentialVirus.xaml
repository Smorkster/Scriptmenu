<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowState="Maximized"
    Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
            <Label Content="All values must be given:"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Casenumber" Width="160"/>
                <TextBox Name="tbCaseNr"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Account-id of user" Width="160"/>
                <TextBox Name="tbID"/>
                <Button Name="btnSearch" Content="Search" Padding="5"/>
            </StackPanel>
        </StackPanel>
        <TabControl Grid.Row="1">
            <TabItem Header="Filtered files" Name="tiFiltered">
                <StackPanel>
                    <Label Name="lblFilters" Content="Listing files filtered by these words (check box/boxes to only show certain filters):"/>
                    <StackPanel Name="spFilters" Orientation="Horizontal"/>
                    <ScrollViewer Name="svFiltered">
                        <StackPanel Name="spFiltered"/>
                    </ScrollViewer>
                </StackPanel>
            </TabItem>
            <TabItem Header="Multiple fileextentions in homefolder:" Name="tiMDH">
                <StackPanel>
                    <Label Name="lblMDH" Content="Files with multiple dots in filename (potentialy multiple fileextentions)"/>
                    <ScrollViewer Name="svMultiDotH">
                        <StackPanel Name="spMultiDotH"/>
                    </ScrollViewer>
                </StackPanel>
            </TabItem>
            <TabItem Header="Multiple fileextentions in shared folders:" Name="tiMDG">
                <StackPanel>
                    <Label Name="lblMDG" Content="Files with multiple dots in filename (potentialy multiple fileextentions)"/>
                    <ScrollViewer Name="svMultiDotG">
                        <StackPanel Name="spMultiDotG"/>
                    </ScrollViewer>
                </StackPanel>
            </TabItem>
            <TabItem Header="Folders with other permissions" Name="tiO">
                <StackPanel>
                    <Label Name="lblO" Content="Folders you don't have permission for, escalate case to third line"/>
                    <Button Name="btnCreateQuestion" Content="Copy question to third line"/>
                    <TextBox Name="txtQuestion" Width="Auto" VerticalContentAlignment="Top" AcceptsReturn="True"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
